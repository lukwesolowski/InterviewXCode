@model MedWeb.Web.Models.DoctorViewModel

<h2>Narzędzie do dodawania specjalizacji do systemu</h2>

@using (Html.BeginForm("AddSpecialization", "Doctor", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.Label("Nazwa specjalizacji:", new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.EditorFor(x => x.Specialization.Name, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <br />
    <button type="submit" class="btn btn-success">Dodaj specjalizacje</button>
}

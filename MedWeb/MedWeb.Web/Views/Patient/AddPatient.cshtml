@model MedWeb.Web.Models.PatientViewModel

<h2>Narzędzie do dodawania pacjentów do systemu</h2>

@using (Html.BeginForm("AddPatient", "Patient", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.Label("Imię:", new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.EditorFor(x => x.FirstName, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Nazwisko:", new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.EditorFor(x => x.LastName, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Numer pesel:", new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.EditorFor(x => x.Pesel, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Data urodzin:", new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.EditorFor(x => x.BirthDate, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <h3>Miejsce zamieszkania: </h3>

    <div class="form-group">
        @Html.Label("Miasto:", new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.EditorFor(x => x.City, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Ulica:", new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.EditorFor(x => x.Street, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Numer domu:", new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.EditorFor(x => x.HouseNumber, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Kod pocztowy:", new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.EditorFor(x => x.ZipCode, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

}